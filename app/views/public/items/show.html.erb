<div class="container">
  <div class="row">
    <div class="col-md-4 mt-5 text-center">
      <%= attachment_image_tag @item, :image, fallback: "no_image.jpg", class: "item_show_img" %>
    </div>

    <div class="col-md-5 mt-5 text-left">

      <div class="row">
        <h4><%= @item.name %></h4>
      </div>

      <div class="row">
        <h6><%= @item.introduction %></h6>
      </div>

      <div class="row mt-5">
        <h4>￥<%= @item.with_tax_price.to_s(:delimited) %>(税込)</h4>
      </div>


      <% if @item.is_active == true %>
        <%= form_with model: @cart_item, local: true do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
            <div class="row">
              <div class="ml-2">
                <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
              </div>

              <div class="d-flex ml-5">
                <%= link_to "カートに入れる", cart_items_path, class: "btn btn-success" %>
              </div>
            </div>
        <% end %>
      <% else %>
        <h3 class="badge badge-danger">販売停止中</h3>
      <% end %>
    </div>
  </div>
</div>