<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h3 class="mb-3 mt-5">商品一覧</h3>
      <p>全<%= @items.count %>件</p>
    </div>

    <% @items.each do |item| %>
      <div class="card ml-3 mb-5">
        <%= link_to item_path(item) do %>
          <%= image_tag item.image, format: 'jpeg', fallback: "no_image.jpg", size: "200x200" %>
        <% end %>
        <% if item.is_active == true %>
          <div class="card-body">
            <h6 class="card-title"><%= item.name %></h6>
            <p class="card-text">￥<%= item.with_tax_price.to_s(:delimited) %></p>
          </div>
        <% else %>
          <div class="card-body">
            <h6 class="card-title"><%= item.name %></h6>
            <p class="card-text">販売停止中</p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>