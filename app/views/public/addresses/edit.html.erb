<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h5 class="p-3 mb-2 bg-light text-dark">配送先編集</h5>
    </div>
  </div>

  <div class="row col-md-12">
    <%= form_with model: @address, local: true do |f| %>

    <div class="form-group row">
      <%= f.label "郵便番号(ハイフンなし)", class: "col-md-4 col-form-label" %>
      <%= f.text_field :postal_code, class: "col-md-3 form-control mt-1" %>
    </div>

    <div class="form-group row">
      <%= f.label "住所", class: "col-md-4 col-form-label" %>
      <%= f.text_field :address, class: "col-md-7 form-control mt-1" %>
    </div>

    <div class="form-group row">
      <%= f.label "宛名", class: "col-md-4 col-form-label" %>
      <%= f.text_field :name, class: "col-md-3 form-control mt-1" %>
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>