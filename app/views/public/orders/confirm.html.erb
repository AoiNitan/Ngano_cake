<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark">注文情報確認</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mt-3">
      <table class="table table-bordered order_table">
        <thead>
          <th colspan="4">商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image, fallback: "no_image.jpg", class: "small_wide_image_size" %>
              </td>
              <td colspan="3"><%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal>to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>


    <div class="col-md-3 mt-3 pr-3">
      <table class="table table-bordered total_order_table">
        <tr>
          <th>送料</th>
          <td class="text-right"><%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>

        <tr>
          <th>商品合計</th>
          <td class="text-right"><%= @total.to_s(:delimited) %></td>
        </tr>

        <tr>
          <th>請求金額</th>
          <td class="text-right"><%= @total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-2 mt-3">
          <h5>支払方法</h5>
        </div>

        <div class="col-md-10 mt-3">
          <p><%= @order.payment_method_i18n %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-2 mt-3">
          <h5>お届け先</h5>
        </div>

        <div class="col-md-10 mt-3">
          <p>
            <%= @order.customer_full_address %>
            <%= @order.name %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-12 text-cnter">
      <%= from_with model: @order, url: oreders_path, local: true do |f| %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :shipping_cost %>
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>