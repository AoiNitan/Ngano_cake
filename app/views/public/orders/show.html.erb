<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark">注文履歴詳細</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7 mt-5">
      <h6>注文情報</h6>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.to_a(:date_jp) %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td style="width: 500px">
              〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-4 mt-5">
      <h6>請求情報</h6>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.shipping_cost.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @total_payment.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <dis class="row">
    <div class="col-md-8 mt-5">
      <h6>注文内容</h6>
      <table class="table table-bordered">
        <thead>
          <th style="width: 400px;">商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.item.with_tax_price %></td>
              <td><%= order_item.amount %></td>
              <td><%= order_item.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </dis>
</div>