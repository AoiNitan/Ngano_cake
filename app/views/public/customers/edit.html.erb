<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h5 class="p-3 mb-2 bg-light text-dark">会員情報編集</h5>
    </div>
  </div>

  <div class="row ml-5">
    <%= form_with model: @customer, url: customers_information_edit_path, local: true do |f| %>

    <div class="form-group row mb-3">
      <%= f.label "名前", class: "col-sm-4 col-form-label" %>
      <%= f.text_field :last_name, autofocus: true, class: "form-control col-sm-3" %>
      <%= f.text_field :first_name, autofocus: true, class: "form-control col-sm-3 ml-3" %>
    </div>

    <dic class="form-groupo row mb-3">
      <%= f.label "フリガナ", class: "col-sm-4 col-form-label" %>
      <%= f.text_field :last_name_kana, autofocus: true, class: "form-control col-sm-3" %>
      <%= f.text_field :first_name_kana, autofocus: true, class: "form-control col-sm-3 ml-3" %>
    </dic>

    <div class="form-group row mb-3">
      <%= f.label "郵便番号", class: "col-sm-4 col-form-label" %>
      <%= f.text_field :postal_code, autofocus: true, class:"form-control col-sm-3" %>
    </div>

    <div class="form-group row mb-3">
      <%= f.label "住所", class: "col-sm-4 col-form-label" %>
      <%= f.text_field :address, autofocus: true, class:"form-control col-sm-8" %>
    </div>

    <div class="form-group row mb-3">
      <%= f.label "電話番号", class: "col-sm-4 col-form-label" %>
      <%= f.text_field :telephone_number, autofocus: true, class:"form-control col-sm-3" %>
    </div>

    <div class="form-group row mb-3">
      <%= f.label "メールアドレス", class: "col-sm-4 col-form-label" %>
      <%= f.email_field :email, autofocus: true, class:"form-control col-sm-3" %>
    </div>

    <div class="action row ml-6">
      <%= f.submit "編集内容を保存", class: "btn btn-success btn-sm-3 ml-6" %>
      <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger btn-sm-2 ml-4" %>
    </div>

    <% end %>
  </div>
</div>