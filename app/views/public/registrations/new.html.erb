<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h5 class="p-3 mb-2 bg-light text-dark">新規会員登録</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>

      <div class="form-group row">
        <%= f.label "名前", class: "col-md-3 col-form-label" %>
        <%= f.label "(姓)", class: "col-form-label col-sm-1" %>
        <%= f.text_field :last_name, autofocus: true, :placeholder => "令和", class: "form-control col-sm-3" %>
        <%= f.label "(名)", class: "col-form-label col-sm-1" %>
        <%= f.text_field :first_name, autofocus: true, :placeholder => "道子", class: "form-control col-sm-3" %>
      </div>

      <div class="form-group row">
        <%= f.label "フリガナ", class: "col-md-3 col-form-label" %>
        <%= f.label "(セイ)", class: "col-form-label col-sm-1" %>
        <%= f.text_field :last_name, autofocus: true, :placeholder => "レイワ", class: "form-control col-sm-3" %>
        <%= f.label "(メイ)", class: "col-form-label col-sm-1" %>
        <%= f.text_field :first_name, autofocus: true, :placeholder => "ミチコ", class: "form-control col-sm-3" %>
      </div>

      <div class="form-group row">
        <%= f.label "メールアドレス", class: "col-form-label col-md-4" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class: "form-control col-md-3" %>
      </div>

      <div class="form-group row">
        <%= f.label "郵便番号(ハイフンなし)", class: "col-form-label col-md-4" %>
        <%= f.text_field :postal_code, autofocus: true, :placeholder => "0000000", class: "form-control col-md-3" %>
      </div>

      <div class="form-group row">
        <%= f.label "住所", class: "col-form-label col-md-4" %>
        <%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0", class: "form-control col-md-7" %>
      </div>

      <div class="form-group row">
        <%= f.label "電話番号(ハイフンなし)", class: "col-form-label col-md-4" %>
        <%= f.text_field :telephone_number, autofocus: true, :placeholder => "00000000000", class: "form-control col-md-3" %>
      </div>

      <div class="form-group row">
        <%= f.label "パスワード(6文字以上)", class: "col-form-label col-md-4" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-3" %>
      </div>

      <div class="form-group row">
        <%= f.label "パスワード(確認用)", class: "col-form-label col-md-4" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-3" %>
      </div>

      <div class="action ml-3">
        <%= f.submit "新規登録", class: "btn btn-primary col-md-3 offset-md-4 mt-3" %>
      </div>

      <% end %>
    </div>
  </div>
</div>