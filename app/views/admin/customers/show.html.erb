<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark"><%= @customer.full_name %>さんの会員詳細</h5>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-12 mt-3">
      <table class="table table-borderless">
        <tr>
          <th class="col-md-2">会員ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= @customer.full_blank_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= @customer.full_blank_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-secondary font-weight-bold">退会</td>
            <% end %>
          </td>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_customer(@customer), class: "btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_rath, class: "btn btn-primary" %>
    </div>
  </div>
</div>