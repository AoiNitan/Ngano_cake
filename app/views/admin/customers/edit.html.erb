<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark"><%= @customer.full_name %>さんの会員情報編集</h5>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-12 mt-4">
      <%= form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>

        <div class="form-group row">
          <%= f.label "会員ID", class: "col-sm-2 col-form-label" %>
          <div><%= @customer.id %></div>
        </div>

        <div class="form-group row">
          <%= f.label "名前", class: "col-sm-2 col-from-label" %>
          <%= f.text_field :last_name, autofocus: true, class: "form-control col-sm-3" %>
          <%= f.text_field :first_name, autofocus: true, class: "form-control col-sm-3" %>
        </div>

        <div class="form-group row">
          <%= f.label "フリガナ", class: "col-sm-2 col-form-label" %>
          <%= f.text_field :last_name_kana, autofocus: true, class: "form-control col-sm-3" %>
          <%= f.text_field :first_name_kana, autofocus: true, class: "form-control col-sm-3" %>
        </div>

        <div class="form-group row">
          <%= f.label "郵便番号", class: "col-sm-2 col-form-label" %>
          <%= f.text_field :postal_code, autofocus: true, class: "cform-control col-sm-3" %>
        </div>

         <div class="form-group row">
          <%= f.label "住所", class: "col-sm-2 col-form-label" %>
          <%= f.text_field :address, autofocus: true, class: "form-control col-sm-7" %>
        </div>

        <div class="form-group row">
          <%= f.label "電話番号", class: "col-sm-2 col-form-label" %>
          <%= f.text_field :telephone_number, autofocus: true, class: "form-control col-sm-3" %>
        </div>

        <div class="form-group row">
          <%= f.label "メールアドレス", class: "col-sm-2 col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-3" %>
        </div>

        <div class="form-group row">
          <%= f.label "会員ステータス", class: "col-sm-2 col-form-label" %>
          <div class="col-md-1">
            <ul>
              <li>
                <%= f.radio_button :is_deleted, :false %>
                <%= f.label "有効" %>
              </li>
            </ul>
          </div>

          <div class="col-md-2">
            <ul>
              <li>
                <%= f.radio_button :is_deleted, :true %>
                <%= f.label "退会" %>
              </li>
            </ul>
          </div>
        </div>

        <div class="action">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>