<div class="container">
  <div clas="row">
    <div class="col-md-5">
      <h5 class="p-3 mb-2 bg-light text-dark">注文履歴一覧</h5>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-12 mt-3">
      <table class="table">
        <thead>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td class="table-secondary"><%= link_to order.created_at.to_s(:datetime_jp), admin_order_path(order), class: "link_text link_border" %></td>
            <td><%= link_to order.customer.full_name, search_admin_orders_path(customer_id: order.customer_id), class: "link_text" %></td>
            <td><%= order.total_amount %></td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
