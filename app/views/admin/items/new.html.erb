<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark">商品新規登録</h5>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-12 mt-3">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>

        <div class="form-group row">
          <%= f.label "商品画像", class: "col-form-label" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group row">
          <%= f.label "商品名", class: "col-form-label" %>
          <%= f.text_field :name, :placeholder => "商品名", class: "form-control col-sm-3" %>
        </div>

        <div class="form-group row">
          <%= f.label "商品説明", class: "col-form-label" %>
          <%= f.text_area :introduction, :placeholder => "ここに説明文を記入します", class: "form-control col-sm-3" %>
        </div>

        <div class="form-group row">
          <%= f.label "ジャンル", class: "col-form-label" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label "税抜価格", class: "col-form-label" %>
          <%= f.text_field :price, :placeholder => "1000", class: "form-control col-sm-3" %><p>円</p>
        </div>

        <div class="form-group row">
          <%= f.label "ステータス", class: "col-form-label" %>
          <div class="row">
            <ul>
              <li>
                <%= f.radio_button :is_active, :true, checked: true %>
                <%= f.label "販売中" %>
              </li>
            </ul>

            <ul>
              <li>
                <%= f.radio_button :is_active, :false %>
                <%= f.label "販売停止中" %>
              </li>
            </ul>
          </div>
        </div>

        <div class="action">
          <%= f.submit "新規登録", class: "btn btn-action col-md-2 btn-create btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>